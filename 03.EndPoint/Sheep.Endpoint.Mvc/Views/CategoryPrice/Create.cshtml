@model Sheep.Core.Application.Category.CategoryPrice.CreateCommand
@using Sheep.Framework.Domain.Entities
@using DNTPersianUtils.Core
<!-- Main content -->
<section class="content">
    <div class="container-fluid">

        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title"> قیمت خوراک</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form asp-action="Create" asp-controller="CategoryPrice"
                          method="post"
                          data-ajax="true"
                          data-callback=""
                          data-action="Refresh"
                          enctype="multipart/form-data">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Food">خوراک</label>
                                <input type="text" asp-for="Food" onkeyup="format(this)" class="form-control" placeholder="قیمت خوراک">
                                <span asp-validation-for="Food" class="error"></span>
                            </div>
                            <div class="form-group">
                                <label for="Category">گروه</label>
                                <select class="form-control form-myselect" asp-for="Category" asp-items="Html.GetEnumSelectList<CategoryType>()">
                                    <option value="" disabled selected hidden>انتخاب کنید</option>
                                </select>
                                <span asp-validation-for="Category" class="error"></span>
                                <span id='output'></span>
                            </div>
                            <div class="form-group">
                                <label for="Gender">جنسیت</label>
                                <select class="form-control form-myselect" asp-for="Gender" asp-items="Html.GetEnumSelectList<GenderType>()">
                                </select>
                                <span asp-validation-for="Gender" class="error"></span>
                                <span id='output'></span>
                            </div>


                            <div class="form-group">
                                <label for="Start">از تاریخ</label>
                                <input type="text" asp-for=Start data-jdp class="form-control DatePicker" placeholder="تاریخ شروع">
                                <span asp-validation-for="Start" class="error"></span>
                            </div>
                            <div class="form-group">
                                <label for="Stop"> تا تاریخ</label>
                                <input type="text" data-jdp asp-for="End" class="form-control DatePicker" placeholder="تاریخ پایان">
                                <span asp-validation-for="End" class="error"></span>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="d-flex justify-content-center">
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary waves-effect">ذخیره</button>
                                <button type="button" class="btn btn-warning" data-dismiss="modal">بستن</button>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->
@section Scripts {

}