@model Sheep.Core.Application.Sheep.Contracts.EditCommand
@using Sheep.Framework.Domain.Entities
@using DNTPersianUtils.Core
<!-- Main content -->
<section class="content">
    <div class="container-fluid">

        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-warning">
                    <div class="card-header">
                        <h3 class="card-title">ویرایش اطلاعات دام</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form asp-action="Edit" asp-controller="Sheep"
                          method="post"
                          data-ajax="true"
                          data-callback=""
                          data-action="Refresh"
                          enctype="multipart/form-data">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="SheepNumber">شماره دام</label>
                                        <input type="text" asp-for="SheepNumber" class="form-control" id="SheepNumber" placeholder="شماره دام">
                                        <input type="hidden" asp-for="Id" hidden class="form-control">
                                        <input type="hidden" asp-for="SheepState" hidden class="form-control">
                                        <input type="hidden" asp-for="PastSheepNumber" hidden class="form-control">
                                        <input type="hidden" asp-for="ParentId" hidden />
                                        <input type="hidden" asp-for="LastSheepbirthDate" hidden />
                                        <input type="hidden" asp-for="LastGender" hidden />
                                        <span asp-validation-for="SheepNumber" class="error"></span>
                                    </div>

                                </div>
                                <div class="col-md-6">
                                    @if (Model.ParentId != null)
                                    {
                                        <div class="form-group">
                                            <label for="SheepParentId"> شماره دام مادر</label>
                                            <input type="text" asp-for="SheepParentId" class="form-control" id="SheepParentId" placeholder="شماره دام">
                                            <span asp-validation-for="SheepParentId" class="error"></span>
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="SheepbirthDate">تاریخ تولد</label>
                                        <input type="text" asp-for=SheepbirthDate data-jdp data-jdp-max-date="today" class="form-control DatePicker" placeholder="تاریخ تولد">
                                        <span asp-validation-for="SheepbirthDate" class="error"></span>
                                    </div>

                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="Sheepshop">تاریخ خرید</label>
                                        <input type="text" asp-for="SheepshopDate" data-jdp data-jdp-max-date="today" class="form-control DatePicker" placeholder="تاریخ خرید">
                                        <span asp-validation-for="SheepshopDate" class="error"></span>
                                    </div>
                                </div>
                            </div>
